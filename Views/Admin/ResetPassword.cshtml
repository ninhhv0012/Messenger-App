@model Messenger_App.ViewModels.Admin.ResetPasswordVM
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Đặt lại mật khẩu</h2>
    <a asp-action="UserDetail" asp-route-id="@Model.UserId" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i> Quay lại chi tiết người dùng
    </a>
</div>

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Đặt lại mật khẩu cho người dùng: @Model.Username</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-1"></i> Lưu ý: Đây là hành động không thể hoàn tác. Mật khẩu cũ sẽ bị vô hiệu hóa.
                </div>

                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" asp-for="UserId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-key me-1"></i> Đặt lại mật khẩu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}