@model List<Messenger_App.ViewModels.ChatListVM>
@{
    ViewData["Title"] = "Chats";
}
<a asp-action="NewChat" class="btn btn-primary mb-3">Tin nhắn mới</a>
<ul class="list-group">
    @foreach (var c in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a asp-action="Detail" asp-route-id="@c.ChatId">@c.ChatName</a>
            @if (c.UnreadCount > 0)
            {
                <span class="badge bg-danger">@c.UnreadCount</span>
            }
        </li>
    }
</ul>