@model List<Messenger_App.ViewModels.FriendItemVM>
@if (!Model.Any())
{
    <p class="text-muted">Không có lời mời.</p>
}
else
{
    <table class="table">
        <thead>
            <tr><th>Người gửi</th><th>Lần hoạt động</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Username</td>
                    <td>@(r.LastActive?.ToLocalTime().ToString("HH:mm dd/MM") ?? "-")</td>
                    <td class="text-end">
                        <button class="btn btn-sm btn-success js-accept" data-id="@r.UserId">Chấp nhận</button>
                        <button class="btn btn-sm btn-secondary js-decline" data-id="@r.UserId">Xoá</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
